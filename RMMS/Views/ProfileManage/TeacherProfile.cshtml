@model RMMS.Model.ProfileManage.TeacherProfileModel
@using RMMS.Framework.Util
@{
    ViewBag.Title = "TeacherProfile";
    Layout = "~/Views/Shared/_AfterLayout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="panel panel-default well">
            <div class="panel-body">
                <div class="col-md-6">
                    <img src="~/Content/Images/teacher.png" height="300px" width="300px" />
                    <br />
                    <br />
                    <br />
                    <div class="progress">
                        <div class="progress-bar progress-bar-warning" style="width: 60%"></div>

                    </div>
                    <span class="text-muted">You have completed your profile 60% &nbsp;&nbsp;&nbsp;</span><button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Complete Profile</button>
                </div>
                <div class="col-md-6">
                    <h3><b>Full Name:</b> @Model.Name</h3><br />
                    <h4><b>Email ID:</b> <span class="text-muted">@Model.Email</span></h4>
                    <h4><b>Location:</b> <span class="text-muted">@Model.Location</span></h4>
                    <h4><b>Contact No:</b> <span class="text-muted">@Model.ContactNo</span></h4>
                    <h4><b>Experties:</b> <span class="text-muted">@Model.Experties</span></h4>
                    <h4><b>Description:</b></h4>
                    <p class="text-muted">
                        @Model.Description
                    </p>
                    <h4><b>Academic Informaiton:</b></h4>
                    <hr style="border: 1px solid #000000;" />
                    <h4><b>SSC/O levels:</b> <span class="text-muted">@Model.AcademicResult[0]</span></h4>
                    <h4><b>HSC/A levels:</b> <span class="text-muted">@Model.AcademicResult[1]</span></h4>
                    <h4><b>University:</b> <span class="text-muted">@Model.AcademicResult[2]</span></h4>
                    <a href="@Url.Action("TeacherEdit", "ProfileManage",new { id = HttpUtil.UserProfile.ID })" class="btn btn-primary"><i class="fa fa-edit">&nbsp;Edit Info</i></a>



                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Additional Information</h4>
            </div>
            <div class="modal-body">
                haha
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

