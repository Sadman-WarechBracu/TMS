@model List<RMMS.Model.PostManage.PostModel>
@{
    ViewBag.Title = "MyPosts";
    Layout = "~/Views/Shared/_AfterLayout.cshtml";
}

<table class="table table-striped table-hover ">
    <thead>
        <tr>

            <th>PostDetails</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.description</td>
                <td><a href="@Url.Action("DeletePosts", "PostManage",new { id = v.P_ID })" class="btn btn-danger"><i class="fa fa-edit">&nbsp;Done</i></a></td>
            </tr>
        }

    </tbody>
</table>


